{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi-style": ["error", "last"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-trailing-spaces": [2, { "skipBlankLines": true }]
    }
}
